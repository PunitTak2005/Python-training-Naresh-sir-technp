class Queue:
    def __init__(self):
        self.queue = []
    
    # Enqueue operation: Add an item to the end of the queue
    def enqueue(self, item):
        self.queue.append(item)
        print(f"{item} added to the queue")
    
    # Dequeue operation: Remove an item from the front of the queue
    def dequeue(self):
        if len(self.queue) < 1:
            return "Queue is empty"
        return self.queue.pop(0)
    
    # Display the queue
    def display(self):
        if len(self.queue) < 1:
            print("Queue is empty")
        else:
            print("Queue: ", self.queue)

# Menu-driven program to interact with the queue
def menu():
    queue = Queue()
    
    while True:
        print("\nQueue Operations:")
        print("1. Insert (Enqueue)")
        print("2. Delete (Dequeue)")
        print("3. Display")
        print("4. Exit")
        
        choice = int(input("Enter your choice (1-4): "))
        
        if choice == 1:
            item = input("Enter the element to insert: ")
            queue.enqueue(item)
        elif choice == 2:
            result = queue.dequeue()
            if result == "Queue is empty":
                print(result)
            else:
                print(f"Dequeued: {result}")
        elif choice == 3:
            queue.display()
        elif choice == 4:
            print("Exiting the program.")
            break
        else:
            print("Invalid choice, please try again.")

# Run the menu
menu()
